@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <span class="navbar-text text-dark small">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark small" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">LOGOUT</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark small" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">LOGIN</a>
        </li>
}
</ul>
